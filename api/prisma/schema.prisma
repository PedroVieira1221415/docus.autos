generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database/dev/db"
}

model PrompTypes {
  id     String   @id @default(uuid())
  name   String   @unique
  Prompt Prompt[]
}

model Video {
  id         String   @id @default(uuid())
  name       String
  path       String
  transcript String?
  createdAt  DateTime @default(now())
}

model Prompt {
  id       String     @id @default(uuid())
  title    String
  template String
  typeId   String     @default(uuid())
  type     PrompTypes @relation(fields: [typeId], references: [id])
}
